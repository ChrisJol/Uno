extends layout

block content
    .session
        .play-space
            .title 
                p #{gameName}
                
            .global-deck
                .hand__card
                    .hand__card--circle
                        p.hand__card--num 0
                .hand__card
                    .hand__card--circle
                        p.hand__card--num 0
            .hand

        .sidebar
            .score
                .score__player
                    p.score__player--username Chris

            .session-chat
                .session-chat__messages
                    .session-chat__message
                        p.session-chat__message-payload--red Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sed pharetra leo, vel dapibus est.
