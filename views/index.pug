extends layout

block content

    include includes/login.pug
    .full-view
        .logo__container
            img(src='images/Logo.png', alt='uno-logo' class='logo')

            if authorized
                .start-page-buttons
                    a(href='/session' class='start-button shadow') Start
                    a(href='/lobby' class='join-button shadow') Join
            else
                a.button__login-signup.shadow Login / Signup
                
        .spinContainer
            include includes/cardspin.pug
        .bg-texture

    .full-view
        h1 How to Play
        .card-types
            include includes/cardtypes.pug

    if authorized
        .full-view
            .chat
                h1.chat__title CHAT
                .chat__box
                    .chat__box--messages
                    .chat__box--form-container
                        form.chat__box--form
                            input(type="text" class="chat__box--input")
                            .chat__box--button
                                img(src="images/arrow.png" class="chat__box--button-img")